<%= simple_form_for [@cocktail, @dose] do |form| %>

  <div class="field">
    <%= form.input :ingredient_id, label: 'ingredient', collection: Ingredient.all, id: :dose_ingredient %>
  </div>

  <div class="field">
    <%= form.input :description, label: 'description', id: :dose_description %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

